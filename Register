    <form id="register-form" class="bg-white rounded-2xl shadow-xl p-8 space-y-6">

      <div>
        <label for="email" class="form-label text-primary-700">Email</label>
        <input type="email" id="email" class="form-input" placeholder="user@example.com" required>
      </div>

      <div>
        <label for="password" class="form-label text-primary-700">Password</label>
        <input type="password" id="password" class="form-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
      </div>

      <div>
        <label for="confirm-password" class="form-label text-primary-700">Confirm Password</label>
        <input type="password" id="confirm-password" class="form-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
      </div>

      <div id="message-area" class="text-sm font-medium text-center" style="display: none;"></div>

