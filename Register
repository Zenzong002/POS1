<script>
  document.getElementById('register-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirm-password');
    const messageArea = document.getElementById('message-area');
    const button = document.getElementById('register-button');
    const buttonText = document.getElementById('register-text'); // Get the span inside button

    const email = emailInput.value;
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;

    // --- Input Validation ---
    if (!email || !password || !confirmPassword) {
      messageArea.innerText = 'Please fill in all fields.';
      messageArea.className = 'text-red-600 text-sm font-medium text-center';
      messageArea.style.display = 'block';
      return;
    }
    if (password !== confirmPassword) {
      messageArea.innerText = 'Passwords do not match!';
      messageArea.className = 'text-red-600 text-sm font-medium text-center';
      messageArea.style.display = 'block';
      return;
    }
    // Basic password strength (optional but recommended)
    if (password.length < 6) {
        messageArea.innerText = 'Password must be at least 6 characters long.';
        messageArea.className = 'text-red-600 text-sm font-medium text-center';
        messageArea.style.display = 'block';
        return;
    }
    // --- End Validation ---

    button.disabled = true;
    buttonText.innerText = 'Registering...'; // Update text inside span
    messageArea.style.display = 'none';

    const credentials = { email: email, password: password };

    // Call registerUser in Code.gs (U ‡πÉ‡∏´‡∏ç‡πà)
    google.script.run
      .withSuccessHandler(onRegisterSuccess)
      .withFailureHandler(onRegisterFailure)
      .registerUser(credentials);
  });

  function onRegisterSuccess(responseJson) {
    const response = JSON.parse(responseJson);
    const messageArea = document.getElementById('message-area');
    const button = document.getElementById('register-button');
    const buttonText = document.getElementById('register-text');

    if (response.success) {
      messageArea.innerText = 'Registration successful! You can now log in.';
      messageArea.className = 'text-green-600 text-sm font-medium text-center';
      document.getElementById('register-form').reset(); // Clear form on success
    } else {
      // Use the error message from the server
      messageArea.innerText = response.message || 'An unknown error occurred.';
      messageArea.className = 'text-red-600 text-sm font-medium text-center';
    }
    messageArea.style.display = 'block';
    button.disabled = false;
    buttonText.innerText = 'Register'; // Reset button text
  }

  function onRegisterFailure(error) {
    const messageArea = document.getElementById('message-area');
    const button = document.getElementById('register-button');
    const buttonText = document.getElementById('register-text');

    // Display a user-friendly message, log the actual error
    messageArea.innerText = 'Registration failed. Please try again later. (' + error.message + ')';
    messageArea.className = 'text-red-600 text-sm font-medium text-center';
    messageArea.style.display = 'block';
    button.disabled = false;
    buttonText.innerText = 'Register'; // Reset button text

    // Log the detailed error to the browser console for debugging
    console.error("Registration Failure:", error);
  }
</script>

