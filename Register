        <button type="submit" id="register-button" class="submit-button w-full">
          <span id="register-text">Register</span>
        </button>
      </div>

      <div class="text-center">
        <a href="<?!= ScriptApp.getService().getUrl(); ?>" class="text-sm font-medium text-secondary-600 hover:text-secondary-500">
          &larr; Back to Login
        </a>
      </div>

